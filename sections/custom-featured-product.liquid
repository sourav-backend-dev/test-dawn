{% schema %}
  {
    "name": "cust-feat-product",
    "settings": [
      {
        "type": "product",
        "id": "product",
        "label": "Select Product"
      },
      {
        "type": "image_picker",
        "id": "image_2",
        "label": "choose image"
      },
      {
        "type": "number",
        "id": "price",
        "label": "product price"
      },
      {
        "type": "text",
        "id": "desc",
        "default": "Description",
        "label": "description",
        "info": "Description"
      }, {
        "type": "select",
        "id": "alignment",
        "options": [
          {
            "value": "left",
            "label": "left"
          }, {
            "value": "center",
            "label": "center"
          }, {
            "value": "justify",
            "label": "justify"
          }, {
            "value": "right",
            "label": "right"
          }
        ],
        "default": "justify",
        "label": "Description Alignment"
      }, {
        "type": "inline_richtext",
        "id": "heading_2",
        "default": "Heading",
        "label": "heading",
        "info": "Heading"
      }
    ],
    "presets": [
      {
        "name": "cust-feat-product"
      }
    ]
  }
{% endschema %}